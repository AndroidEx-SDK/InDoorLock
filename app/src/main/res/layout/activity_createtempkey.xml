<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    >

    <include
        layout="@layout/activity_titlebar"></include>

    <LinearLayout
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:text="姓名"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/name"
            android:hint="请输入姓名"
            android:text="tt"
            android:background="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="1px"
        >
        <TextView
            android:text="电话"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/mobile"
            android:hint="请输入电话号码"
            android:text="15519709045"
            android:inputType="number"
            android:background="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="1px"
        >
        <TextView
            android:text="限制"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            />
        <RadioGroup
            android:id="@+id/limit_rg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/rb_count"
                android:text="次数"
                android:checked="true"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
            <RadioButton
                android:id="@+id/rb_time"
                android:text="时间"
                android:layout_marginLeft="50dp"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/count_layout"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="1px"
        >
        <TextView
            android:text="次数"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/count"
            android:inputType="number"
            android:hint="请输入限制次数"
            android:background="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_layout"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="1px"
        >
        <TextView
            android:text="时间"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/time"
            android:hint="请设置时间（7天内有效）"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:background="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="1px"
        >
        <TextView
            android:text="小区"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/lock"
            android:hint="请设置小区"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:background="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <Button
        android:id="@+id/cancel"
        android:text="取消"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@drawable/cancel_backgaround"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <Button
        android:id="@+id/confirm"
        android:text="确认"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@drawable/confirm_background"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp" />

</LinearLayout>