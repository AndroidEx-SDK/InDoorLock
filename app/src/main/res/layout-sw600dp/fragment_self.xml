<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/center_user_icon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@mipmap/ic_gg"
        app:civ_border_width="1dp"
        app:civ_border_color="#99cc00"/>
    <TextView
        android:id="@+id/self_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="李萌萌" />
    <TextView
        android:id="@+id/self_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:text="15919749045" />

    <LinearLayout
        android:layout_marginLeft="180dp"
        android:layout_marginRight="180dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/self_coupon"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/self_item_height">
            <ImageView
                android:src="@mipmap/ic_coupon"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="我的优惠券"
                android:layout_marginLeft="@dimen/self_item_text_marginLeft"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>

        <LinearLayout
            android:id="@+id/self_house"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/self_item_height">
            <ImageView
                android:src="@mipmap/ic_house"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="我的房屋"
                android:layout_marginLeft="@dimen/self_item_text_marginLeft"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>


        <LinearLayout
            android:id="@+id/self_photo"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/self_item_height">
            <ImageView
                android:src="@mipmap/ic_photo"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="我的相框"
                android:layout_marginLeft="@dimen/self_item_text_marginLeft"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>

        <LinearLayout
            android:id="@+id/self_updatepassword"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/self_item_height">
            <ImageView
                android:src="@mipmap/ic_updatepassword"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="修改密码"
                android:layout_marginLeft="@dimen/self_item_text_marginLeft"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>

        <LinearLayout
            android:id="@+id/self_signout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/self_item_height">
            <ImageView
                android:src="@mipmap/ic_signout"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="注销"
                android:layout_marginLeft="@dimen/self_item_text_marginLeft"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>

        <LinearLayout
            android:id="@+id/self_exit"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/self_item_height">
            <ImageView
                android:src="@mipmap/ic_exit"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="退出"
                android:layout_marginLeft="@dimen/self_item_text_marginLeft"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>


        <LinearLayout
            android:id="@+id/self_help"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/self_item_height">
            <ImageView
                android:src="@mipmap/ic_help"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="帮助"
                android:layout_marginLeft="@dimen/self_item_text_marginLeft"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
    </LinearLayout>
</LinearLayout>