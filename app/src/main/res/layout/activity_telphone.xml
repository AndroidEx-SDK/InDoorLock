<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/call_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/call_portrait_image"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_guest"
            android:layout_width="400dp"
            android:layout_height="300dp" />
        <TextView
            android:id="@+id/call_name_text"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/call_portrait_image"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="安卓工控0502号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/call_reject_layout"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_reject"
                    android:layout_width="92dp"
                    android:layout_height="92dp" />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:text="挂断"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/call_opendoor_layout"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_lock"
                    android:layout_width="92dp"
                    android:layout_height="92dp" />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:text="开门"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/call_voice_layout"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_acceptvoice"
                    android:layout_width="92dp"
                    android:layout_height="92dp" />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:text="语音对讲"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/call_video_layout"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_accept"
                    android:layout_width="92dp"
                    android:layout_height="92dp" />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:text="视频对讲"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/offhook_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/offhook_portrait_image"
            android:visibility="gone"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_guest"
            android:layout_width="400dp"
            android:layout_height="300dp" />
        <FrameLayout
            android:id="@+id/offhook_video_layout"
            android:visibility="gone"
            android:background="#000000"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="200dp"
            android:layout_marginBottom="250dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
        <LinearLayout
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/offhoot_reject_layout"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_reject"
                    android:layout_width="92dp"
                    android:layout_height="92dp" />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:text="挂断"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/offhoot_opendoor_layout"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_lock"
                    android:layout_width="92dp"
                    android:layout_height="92dp" />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:text="开门"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>