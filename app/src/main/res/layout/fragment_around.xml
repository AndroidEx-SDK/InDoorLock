<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <ImageView
        android:id="@+id/img_around"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/x100"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_around_shop1" />

    <TextView
        android:id="@+id/name_around"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_around"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginTop="@dimen/x10"
        android:layout_toRightOf="@+id/img_around"
        android:text="安卓工控商贸"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/phone_around"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name_around"
        android:layout_below="@+id/name_around"
        android:layout_marginTop="@dimen/x5"
        android:text="电话：15919749045"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/address_around"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name_around"
        android:layout_below="@+id/phone_around"
        android:layout_marginTop="@dimen/x16"
        android:text="地址：龙景工业园"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

</RelativeLayout>