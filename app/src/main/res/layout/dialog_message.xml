<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:background="@drawable/dialog_message_background"
    >

    <TextView
        android:id="@+id/title"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="70dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E4E4E4" />
    <TextView
        android:id="@+id/message"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="#555555"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        />
    <LinearLayout
        android:layout_marginTop="-60dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E4E4E4"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/cancel"
                android:background="@drawable/dialog_button_left_background"
                android:layout_marginRight="0.5px"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#E4E4E4"
                ></View>
            <Button
                android:id="@+id/confirm"
                android:background="@drawable/dialog_button_right_background"
                android:layout_marginLeft="0.5px"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>